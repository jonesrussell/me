{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-declaration-strict-value"
  ],
  "rules": {
    "scale-unlimited/declaration-strict-value": [
      [
        "font-size",
        "line-height",
        "color",
        "background-color",
        "border-color",
        "box-shadow"
      ],
      {
        "ignoreValues": [
          "transparent",
          "inherit",
          "initial",
          "unset",
          "currentColor"
        ],
        "disableFix": true
      }
    ],
    "declaration-property-value-disallowed-list": {
      "font-size": ["px", "rem", "em"],
      "line-height": ["/^[0-9]+$/"],
      "margin": ["px", "rem", "em"],
      "padding": ["px", "rem", "em"],
      "gap": ["px", "rem", "em"],
      "width": ["px", "rem", "em"],
      "height": ["px", "rem", "em"]
    },
    "unit-disallowed-list": ["px", "rem", "em"],
    "unit-allowed-list": ["ch", "%", "deg", "ms", "s", "fr", "vw", "vh", "cqi"],
    "order/properties-order": [
      "font-family",
      "font-size",
      "font-weight",
      "line-height",
      "color",
      {
        "groupName": "layout",
        "properties": [
          "display",
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "float",
          "clear"
        ]
      },
      {
        "groupName": "grid",
        "properties": [
          "grid-template-columns",
          "grid-template-rows",
          "grid-template-areas",
          "grid-auto-columns",
          "grid-auto-rows",
          "grid-auto-flow",
          "grid-column",
          "grid-row",
          "grid-area"
        ]
      },
      {
        "groupName": "flex",
        "properties": [
          "flex-direction",
          "flex-wrap",
          "flex-flow",
          "justify-content",
          "align-items",
          "align-content",
          "flex",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "order",
          "align-self"
        ]
      },
      {
        "groupName": "box",
        "properties": [
          "width",
          "min-width",
          "max-width",
          "height",
          "min-height",
          "max-height",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left"
        ]
      },
      {
        "groupName": "border",
        "properties": [
          "border",
          "border-width",
          "border-style",
          "border-color",
          "border-radius"
        ]
      },
      {
        "groupName": "background",
        "properties": [
          "background",
          "background-color",
          "background-image",
          "background-repeat",
          "background-position",
          "background-size"
        ]
      },
      {
        "groupName": "animation",
        "properties": [
          "transform",
          "transition",
          "animation",
          "animation-name",
          "animation-duration",
          "animation-timing-function",
          "animation-delay",
          "animation-iteration-count",
          "animation-direction",
          "animation-fill-mode",
          "animation-play-state"
        ]
      }
    ]
  }
} 