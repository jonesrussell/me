# Core Development Guidelines
testing_guidelines:
  - Focus on testing functionality rather than specific CSS implementations
  - write_unit_tests: true
  - test_components_in_isolation: true
  - test_user_interactions: true
  - test_state_management: true
  - test_accessibility: true
  - test_error_cases: true
  - use_vitest_and_testing_library: true
  - mock_external_dependencies: true
  - test_edge_cases: true
  - use_test_fixtures: true
  - implement_test_utilities: true
  - follow_aaa_pattern: true
  - use_snapshot_testing: true
  - test_component_rendering: true
  - test_prop_validation: true
  - test_children_rendering: true
  - use_async_testing: true
  - test_component_structure: true
  - test_style_applications: true
  - test_responsive_behavior: true
  - no_test_ids: true
  - use_semantic_html_for_testing: true
  - test_using_roles_and_labels: true

branding:
  - title: 'Russell Jones'
  - description: 'Building elegant solutions with modern web technologies'

general_rules:
  - use_typescript: true
  - add_comments: true
  - maintain_documentation: true
  - follow_solid_principles: true
  - keep_functions_pure: true
  - minimize_side_effects: true
  - use_strict_type_checking: true
  - validate_props_at_runtime: true
  - handle_edge_cases_gracefully: true
  - use_consistent_error_handling: true

code_style:
  - use_semicolons: true
  - use_strict_types: true
  - prefer_const: true
  - max_line_length: 100
  - indent_style: tabs
  - indent_size: 2
  - use_consistent_naming: true
  - prefix_interfaces_with_i: true
  - suffix_types_with_type: true
  - use_descriptive_test_names: true
  - group_related_tests: true
  - use_clear_test_structure: true
  - document_test_cases: true

separation_of_concerns:
  - organize_by_feature: true
  - separate_business_logic: true
  - isolate_ui_components: true
  - keep_services_stateless: true
  - use_dependency_injection: true
  - minimize_component_logic: true
  - separate_test_utilities: true
  - isolate_test_dependencies: true
  - maintain_test_independence: true

type_organization:
  - centralize_shared_types: true
  - use_type_aliases: true
  - prefer_interfaces_over_types: true
  - group_related_types: true
  - document_complex_types: true
  - use_type_guards: true
  - export_types_separately: true
  - type_test_utilities: true
  - type_component_props: true
  - type_test_fixtures: true

