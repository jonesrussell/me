// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Me + TypeScript",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "automatic",
			"userUid": "automatic",
			"userGid": "automatic"
		},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"installDockerComposeSwitch": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		},
		"ghcr.io/dhoeric/features/act:1": {},
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": false
		}
	},
	"mounts": [
		"type=bind,source=/home/${localEnv:USER}/.ssh,target=/home/node/.ssh,readonly",
		"type=volume,src=node_modules,target=/workspace/node_modules",
		"type=volume,src=vscode-extensions,target=/root/.vscode-server/extensions"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"github.vscode-github-actions",
				"vscode.typescript-language-features",
				"stylelint.vscode-stylelint",
				"vscode.css-language-features",
				"vscode.html-language-features",
				"vscode.json-language-features",
				"vscode.markdown-language-features",
				"GitHub.vscode-pull-request-github",
				"hbenl.vscode-test-explorer",
				"ms-playwright.playwright",
				"esbenp.prettier-vscode",
				"ms-azuretools.vscode-docker"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "vscode.typescript-language-features",
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "always",
					"source.fixAll.stylelint": "always"
				},
				"typescript.tsdk": "node_modules/typescript/lib",
				"typescript.enablePromptUseWorkspaceTsdk": true
			}
		}
	},
	"forwardPorts": [5173, 9323],
	"portsAttributes": {
		"5173": {
			"label": "Vite Dev Server",
			"onAutoForward": "notify"
		},
		"9323": {
			"label": "Playwright Report",
			"onAutoForward": "notify"
		}
	},
	"remoteEnv": {
		"NODE_ENV": "development"
	}
}
