{
	"name": "me",
	"version": "0.1.0",
	"homepage": "https://jonesrussell.github.io/me/",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development vite dev --host 0.0.0.0",
		"build": "NODE_ENV=production vite build",
		"preview": "NODE_ENV=production vite preview --host",
		"test": "NODE_ENV=development npm run test:unit",
		"check": "NODE_ENV=development svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "NODE_ENV=development svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "NODE_ENV=development prettier --check . && NODE_ENV=development eslint . && npm run lint:css",
		"format": "NODE_ENV=development prettier --write .",
		"test:unit": "NODE_ENV=development vitest --run",
		"workflow": "act -P ubuntu-latest=mcr.microsoft.com/playwright:v1.42.1-jammy",
		"workflow:list": "act -l",
		"workflow:test": "act -j test -P ubuntu-latest=mcr.microsoft.com/playwright:v1.42.1-jammy",
		"workflow:build": "act -j build -P ubuntu-latest=mcr.microsoft.com/playwright:v1.42.1-jammy",
		"workflow:deploy": "act -j deploy -P ubuntu-latest=mcr.microsoft.com/playwright:v1.42.1-jammy",
		"workflow:full": "act -P ubuntu-latest=mcr.microsoft.com/playwright:v1.42.1-jammy --reuse",
		"lint:css": "stylelint '**/*.{css,scss,svelte}' --fix"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.2",
		"@eslint/compat": "^1.2.3",
		"@storybook/addon-essentials": "^8.4.7",
		"@storybook/addon-interactions": "^8.4.7",
		"@storybook/addon-svelte-csf": "^5.0.0-next.15",
		"@storybook/blocks": "^8.4.7",
		"@storybook/svelte": "^8.4.7",
		"@storybook/sveltekit": "^8.4.7",
		"@storybook/test": "^8.4.7",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.9.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@types/node": "^22.10.2",
		"@vitest/browser": "^2.1.8",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^25.0.1",
		"postcss-html": "^1.7.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"storybook": "^8.4.7",
		"stylelint": "^15.11.0",
		"stylelint-config-recommended-scss": "^13.1.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-declaration-strict-value": "^1.9.2",
		"stylelint-order": "^6.0.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.0.0",
		"vite": "^6.0.0",
		"vitest": "^2.0.4",
		"webdriverio": "^9.5.0"
	},
	"dependencies": {
		"@fontsource/jetbrains-mono": "^5.1.2"
	}
}
