{
	"name": "me",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"test:client": "vitest run --config vite.config.ts --workspace client",
		"test:server": "vitest run --config vite.config.ts --workspace server",
		"validate": "npm run check && npm run lint && npm run test",
		"workflow": "act -W .github/workflows/deploy.yml",
		"knip": "knip"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@fontsource/fira-mono": "^5.0.0",
		"@fontsource/jetbrains-mono": "^5.2.5",
		"@playwright/test": "^1.51.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/highlight.js": "^10.1.0",
		"@types/jsdom": "^21.1.6",
		"@types/node": "^22.14.1",
		"@vitest/browser": "^3.1.1",
		"@vitest/coverage-v8": "^3.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"knip": "^5.50.4",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.25.0",
		"svelte-check": "^4.1.6",
		"svelte-eslint-parser": "^1.1.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"@iconify/svelte": "^4.2.0",
		"@types/dompurify": "^3.0.5",
		"@types/sanitize-html": "^2.15.0",
		"dompurify": "^3.2.5",
		"highlight.js": "^11.11.1",
		"marked": "^15.0.8",
		"sanitize-html": "^2.16.0",
		"svelte-intersection-observer": "^1.0.0"
	}
}
