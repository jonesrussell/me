{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"svelteSortOrder": "scripts-styles-markup-options",
				"svelteStrictMode": true,
				"svelteBracketNewLine": false,
				"svelteIndentScriptAndStyle": true
			}
		},
		{
			"files": "*.{ts,tsx}",
			"options": {
				"parser": "typescript",
				"semi": true,
				"arrowParens": "avoid"
			}
		}
	]
}
